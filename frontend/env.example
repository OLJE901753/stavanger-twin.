# Stavanger Twin Environment Variables
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME="Stavanger Twin"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Digital Democracy Revolution"

# hCaptcha (for voting security)
NEXT_PUBLIC_HCAPTCHA_SITEKEY="your-hcaptcha-site-key-here"
HCAPTCHA_SECRET_KEY="your-hcaptcha-secret-key-here"

# Blockchain (Polygon)
NEXT_PUBLIC_POLYGON_RPC_URL="https://polygon-rpc.com"
NEXT_PUBLIC_POLYGON_CHAIN_ID="137"
NEXT_PUBLIC_CONTRACT_ADDRESS="your-contract-address-here"

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url-here"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"

# PostGIS (for geospatial data)
DATABASE_URL="postgresql://username:password@host:port/database"
POSTGIS_ENABLED="true"

# API Keys
NEXT_PUBLIC_MAPBOX_TOKEN="your-mapbox-token-here"
NEXT_PUBLIC_OPENAI_API_KEY="your-openai-api-key-here"

# Security
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Analytics (optional)
NEXT_PUBLIC_GA_ID="your-google-analytics-id-here"
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="your-plausible-domain-here"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="true"
